#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    for (int i = 1; i < 2 * n; i++) {
        printf("*");
        if (i > n) {
            for (int j = 2; j < 2 * n - 1; j++) {
                printf(" ");
            }
            printf("*");
        } else if (i == 1) {
            for (int j = 2; j < 2 * n; j++) {
                printf("*");
            }
        } else {
            for (int j = 2; j < i; j++) {
                printf(" ");
            }
            printf("*");
            for (int j = 1; j <= 2 * n - 1 - 2 * i; j++) {
                printf(" ");
            } 
            if (i != n) {
                printf("*");
            }
            for (int j = 2; j < i; j++) {
                printf(" ");
            }
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
