#include <stdio.h>
#include <math.h>
	int main () {
		int n;
		scanf("%d", &n);
		for (int i = 1; i <= 2 * n - 1; i++) {
			for (int j = 1; j <= 2 * n - 1; j++) {
				int min_khoangcach = fmin(fmin(i - 1, 2 * n - i - 1), fmin(j - 1, 2 * n - j - 1));
				printf("%d", n - min_khoangcach); 
			}
			printf("\n");
		}
		return 0;
	}
