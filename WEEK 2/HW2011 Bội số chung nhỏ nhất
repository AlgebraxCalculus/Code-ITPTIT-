#include <stdio.h>

int main() {
	int t;
	scanf("%d", &t);
	while (t--) {
		long long a, b;
		scanf("%lld %lld", &a, &b);
		long long bcnn;
		long long m = a;
		long long n = b;
		while (b != 0) {
			long long r = a % b;
			a = b;
			b = r;
		}
		long long ucln = a;
		bcnn = (m * n) / ucln;
		printf("%lld", bcnn);
		printf("\n");
	}
	return 0;
}
