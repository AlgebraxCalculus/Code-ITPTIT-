#include <bits/stdc++.h>
#define endl "\n"

using namespace std;

int main() {
	int t;
	cin >> t;
	while (t--) {
		string s;
		cin >> s;
		stack<int> st;
		vector<pair<int, int>> ans;
		for (int i = 0; i < s.size(); i++) {
			if (s[i] == '(') {
				st.push(i);
			}
			else if (!st.empty()) {
				ans.push_back({st.top() + 1, i + 1});
				st.pop();
			}
		}
		for (auto x : ans) {
			cout << x.first << ' ' << x.second << ' ' << endl;
		}
		cout << endl;
	}
	return 0;
}
