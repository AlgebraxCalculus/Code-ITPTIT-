#include <stdio.h>

int main() {
	int n; 
	scanf("%d", &n);
	for (int i = 1; i <= n; i++) {
		for (int k = 1; k <= n - i; k++) {
			printf(" ");
		}
		for (int j = 1; j <= i; j++){
        if (j == 1 || i == n || j == i) {
            if (j < i) {
            printf("* ");
            } else if (j == i) {
                printf("*");
            }
        } else {
          printf("  ");
        }
      }
		if (i < n) {
		printf("\n");
		} 
	}
	return 0;
}
